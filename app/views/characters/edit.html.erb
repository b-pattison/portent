<h1>Edit Character</h1>

<% if @character.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>
    <ul>
      <% @character.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [@campaign, @character], multipart: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :initiative_modifier %>
  <%= f.number_field :initiative_mod %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  
  <% if @character.avatar.attached? %>
    <div>
      <p>Current avatar:</p>
      <%= image_tag @character.avatar, alt: @character.name, style: "max-width: 200px;" %>
    </div>
  <% end %>

  <%= f.submit "Update Character" %>
<% end %>

<%= link_to "Back to Campaign", campaign_path(@campaign), class: "btn btn-secondary" %>
