<h1>New Character</h1>

<% if @character.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>
    <ul>
      <% @character.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [@campaign, @character], multipart: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :initiative_modifier %>
  <%= f.number_field :initiative_mod %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit "Create Character" %>
<% end %>
