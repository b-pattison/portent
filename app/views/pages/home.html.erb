<div style="text-align: center; padding: clamp(40px, 10vw, 80px) 20px;">
  <h1 style="font-size: clamp(32px, 8vw, 48px); margin-bottom: 24px;">
    Welcome to Portent
  </h1>
  <p style="font-size: clamp(18px, 4.5vw, 24px); opacity: 0.9; margin-bottom: 40px; max-width: 600px; margin-left: auto; margin-right: auto;">
    Your mystical companion for managing D&D encounters and campaigns
  </p>
  
  <% unless user_signed_in? %>
    <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary" %>
    </div>
  <% else %>
    <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
      <%= link_to "View Campaigns", campaigns_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
